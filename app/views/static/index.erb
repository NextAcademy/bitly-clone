<h1>Bitly Clone</h1>
<h2>THE LINK KNOWS ALL. SO CAN YOU.</h2>
<p>Measure your links with Bitly Clone.</p>

<!-- created a form -->
<form id="main", action="/url" method="POST">
	<!-- ENTER URL: -->
	<input type="text" name="long_url" placeholder="Paste a link to shortern it">
	<input type="submit" value="Submit">
</form>

<p id="message"><%= @flash%></p>

<div id="demo"></div>

<div id="table-content">
<table id="table" align="center">
	<% Url.all.each do |x| %>
	<tr>
		<td><%= x.long_url%></td>
		<td>
			<a href="<%= x.short_url %>"> <%= x.short_url%> </a>
		</td>
		<td><%= x.click_count %></td>
	</tr>
	<% end %>
</table>
</div>


